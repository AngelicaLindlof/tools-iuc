<tool id="pl.dpt_groups_pseudotime" name="pl.dpt_groups_pseudotime" version="1.3.1+galaxy1">
    <description>Plot groups and pseudotime.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
          python $script_file
      ]]></command>
    <configfiles>
        <configfile name="script_file"><![CDATA[
@CMD_imports@
@CMD_read_inputs@
sc.settings.figdir = '.'

sc.pl.dpt_groups_pseudotime(
    adata=adata,
    color_map='$color_map',
    show=False,
    save='.$format'
)
]]></configfile>
    </configfiles>
    <inputs>
        <expand macro="inputs_anndata"/>
        <param argument="color_map" type="select" label="Colors to use for plotting categorical annotation groups" help="">
            <expand macro="matplotlib_pyplot_colormap"/>
        </param>
        <expand macro="param_plot_format"/>
    </inputs>
    <outputs>
        <expand macro="plot_output"/>
    </outputs>
    <tests>
        <test>
            <conditional name="input">
                <param name="format" value="h5ad" />
                <param name="adata" value="tl.dpt.neighbors.paul15_gauss_braycurtis.h5ad" />
            </conditional>
            <param name="color_map" value="viridis"/>
            <param name="format" value="png"/>
            <output name="out_png" file="pl.dpt_groups_pseudotime.paul15_gauss_braycurtis.png" ftype="png" compare="sim_size"/>
        </test>
    </tests>
    <help><![CDATA[
Plot groups and pseudotime

More details on the `scanpy documentation
<https://scanpy.readthedocs.io/en/latest/api/scanpy.api.pl.dpt_groups_pseudotime.html#scanpy.api.pl.dpt_groups_pseudotime>`__
      ]]></help>
    <expand macro="citations"/>
</tool>
