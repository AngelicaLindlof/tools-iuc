<tool id="pp.sqrt" name="pp.sqrt" version="1.3.1+galaxy1">
    <description>Square root the data matrix</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
          python $script_file
      ]]></command>
    <configfiles>
        <configfile name="script_file"><![CDATA[
@CMD_imports@
@CMD_read_inputs@

sc.pp.sqrt(
  data=adata,
  copy=False)

@CMD_anndata_write_outputs@
  ]]></configfile>
    </configfiles>
    <inputs>
        <expand macro="inputs_anndata"/>
        <expand macro="anndata_output_format"/>
    </inputs>
    <outputs>
        <expand macro="anndata_outputs"/>
    </outputs>
    <tests>
        <test>
            <conditional name="input">
                <param name="format" value="h5ad" />
                <param name="adata" value="krumsiek11.h5ad" />
            </conditional>
            <param name="anndata_output_format" value="h5ad" />
            <output name="anndata_out_h5ad" file="pp.sqrt.krumsiek11.h5ad" ftype="h5" compare="sim_size"/>
        </test>
    </tests>
  <help><![CDATA[
Computes the square root the data matrix: `X = sqrt(X)`.

More details on the `scanpy documentation
<https://scanpy.readthedocs.io/en/latest/api/scanpy.api.pp.sqrt.html#scanpy.api.pp.sqrt>`__
    ]]></help>
  <expand macro="citations"/>
</tool>
