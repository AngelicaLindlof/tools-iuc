<tool id="pl.pca_variance_ratio" name="pl.pca_variance_ratio" version="1.3.1+galaxy1">
    <description>Plot the PCA variance ratio</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
          python $script_file
      ]]></command>
    <configfiles>
        <configfile name="script_file"><![CDATA[
@CMD_imports@
@CMD_read_inputs@
sc.settings.figdir = '.'

sc.pl.pca_variance_ratio(
    adata=adata,
    log=$log,
    show=False,
    save='.$format')
]]></configfile>
    </configfiles>
    <inputs>
        <expand macro="inputs_anndata"/>
        <expand macro="param_log"/>
        <expand macro="param_plot_format"/>
    </inputs>
    <outputs>
        <expand macro="plot_output"/>
    </outputs>
    <tests>
        <test>
            <conditional name="input">
                <param name="format" value="h5ad" />
                <param name="adata" value="pp.pca.krumsiek11.h5ad" />
            </conditional>
            <param name="log" value="False"/>
            <output name="out_png" file="pl.pca_variance_ratio.pp.pca.krumsiek11.png"/>
        </test>
    </tests>
    <help><![CDATA[
Plot the variance ratio.

More details on the `scanpy documentation
<https://scanpy.readthedocs.io/en/latest/api/scanpy.api.pl.pca_variance_ratio.html#scanpy.api.pl.pca_variance_ratio>`__
    ]]></help>
  <expand macro="citations"/>
</tool>
