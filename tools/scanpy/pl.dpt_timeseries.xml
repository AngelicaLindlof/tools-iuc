<tool id="pl.dpt_timeseries" name="pl.dpt_timeseries" version="1.3.1+galaxy1">
  <description>Heatmap of pseudotime series.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="exit_code"><![CDATA[
        python $script_file
    ]]></command>
  <configfiles>
    <configfile name="script_file"><![CDATA[
import scanpy.api as sc
@CMD_set_figure_params


sc.pl.dpt_timeseries(
   as_heatmap = '$as_heatmap',)
]]></configfile>
  </configfiles>
  <inputs>
    <param name="as_heatmap" type="data" format="bool " value="" label="as_heatmap" help="    Plot the timeseries as heatmap."/>
    <section name="pl_settings" title="Plot settings" expanded="false"><expand macro="inputs_set_figure_params"/></section></inputs>
  <outputs>
    </outputs>
  <tests>
    <test>
      <param name="as_heatmap" value=""/>
      <expand macro="tests_set_figure_params"/>
    </test>
  </tests>
  <help><![CDATA[
        Heatmap of pseudotime series.

Parameters
----------
as_heatmap : bool (default: False)
    Plot the timeseries as heatmap.
    ]]></help>
  <expand macro="citations"/>
</tool>
