<tool id="utils.hierarch_cluster" name="utils.hierarch_cluster" version="1.3.1+galaxy1">
  <description>Cluster matrix using hierarchical clustering.</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command detect_errors="exit_code"><![CDATA[
        python $script_file
    ]]></command>
  <configfiles>
    <configfile name="script_file"><![CDATA[
import scanpy.api as sc



sc.utils.hierarch_cluster(
   M = '$M',)
]]></configfile>
  </configfiles>
  <inputs>
    <param name="M" type="data" format="np.ndarray" value="" label="M" help="    Matrix, for example, distance matrix."/>
    </inputs>
  <outputs>
    <data name="Mclus" type="data" format="np.ndarray" label="${tool.name} on ${on_string}: Mclus"/>
    <data name="indices" type="data" format="np.ndarray" label="${tool.name} on ${on_string}: indices"/>
    </outputs>
  <tests>
    <test>
      <param name="M" value=""/>
      <output name="Mclus" file=""/>
      <output name="indices" file=""/>
    </test>
  </tests>
  <help><![CDATA[
        Cluster matrix using hierarchical clustering.

Parameters
----------
M : np.ndarray
    Matrix, for example, distance matrix.

Returns
-------
Mclus : np.ndarray
    Clustered matrix.
indices : np.ndarray
    Indices used to cluster the matrix.
    ]]></help>
  <expand macro="citations"/>
</tool>
